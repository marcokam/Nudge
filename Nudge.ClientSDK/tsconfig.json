{
	"compilerOptions": {
		"target": "ES5",
		"moduleResolution": "node",
		"module": "ES6",
		"strict": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"baseUrl": "./",
		"paths": {
			"~/*": [ "./*" ]
		},
		"jsx": "react",
		"lib": [ 
			"es5", "es6", "es2017", "es2018", "esnext", "dom"
		],
		"typeRoots": [ "./typings", "./node_modules/@types"],
		"outDir": "dist",
		"rootDir": "./",
		"declaration": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"inlineSources": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
  	],
	"exclude": [
		"node_modules",
		"dist",
		"package"
	]
}